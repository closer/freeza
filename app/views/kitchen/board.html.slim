- current_user.fridges.each do |fridge|
  .fridge
    p.control
      = link_to 'Edit fridge', edit_fridge_path(fridge)
      '  /
      = link_to 'New food', new_fridge_food_path(fridge)
    h3 = fridge.name
    - fridge.foods.each do |food|
      .food class="#{food.status}"
        p.control
          = link_to 'Edit', edit_fridge_food_path(fridge, food)
          = link_to 'Delete', fridge_food_path(fridge, food), method: :delete
        h4.name = food.name
        p.limit = "Limit: #{food.limit}"
